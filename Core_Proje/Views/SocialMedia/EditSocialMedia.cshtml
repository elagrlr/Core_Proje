@model EntityLayer.Concrete.SocialMedia
@{
    ViewData["Title"] = "EditSocialMedia";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}


@using (Html.BeginForm("EditSocialMedia", "SocialMedia", FormMethod.Post, new { @class = "col-12" }))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title"> Sosyal Medya Hesabı Güncelle</h4>

                <form class="forms-sample">
                    <div class="form-group">
                        @Html.HiddenFor(x=>x.SocialMediaId)
                    </div>
                    <div class="form-group">
                        <label>Platform Adı</label>
                        @Html.TextBoxFor(x=>x.Name, new {@class="form-control"})
                    </div>
                    <div class="form-group">
                        <label>Icon</label>
                        @Html.TextBoxFor(x=>x.Icon, new {@class="form-control"})
                    </div>
                    <div class="form-group">
                        <label>Url</label>
                        @Html.TextBoxFor(x=>x.Url, new {@class="form-control"})
                    </div>
                  
                    <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                    <button class="btn btn-dark">İptal</button>
                </form>
            </div>
        </div>
    </div>
}
