@model EntityLayer.Concrete.Feature
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}
<!-- Öne cıkanlar -->

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">

            @using (Html.BeginForm("Index", "Feature", FormMethod.Post, new { @class = "col-12" }))
            {
                @Html.HiddenFor(x=>x.FeatureId)
                <br />
                @Html.Label("Başlık")

                @Html.TextBoxFor(x=>x.Header, new {@class="form-control"})
                // Add işleminde input ile yaptığımız işlemi burada farklı olarak textboxfor ile yaptık.model(@model EntityLayer.Concrete.Skill) kullanılan yerlerde bu sekilde de kullanılabilir.
                <br />
                @Html.Label("Ad Soyad")
                @Html.TextBoxFor(x=>x.Name, new {@class="form-control"})
                <br />
                @Html.Label("Görev")
                @Html.TextBoxFor(x=>x.Title, new {@class="form-control"})
                <br />
                <button class="btn btn-success"> Güncelle</button>

            }
        </div>
    </div>
</div>