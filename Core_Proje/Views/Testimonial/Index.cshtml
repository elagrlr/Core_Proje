@using EntityLayer.Concrete
@model List<Testimonial>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}
<!-- TESTIMONIAL INDEX-->

<div class="col-12 grid-margin">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Order Status</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th> Ad Soyad </th>
                            <th> Şirket </th>
                            <th>  Yorum </th> 
                            <th> Sil </th>
                            <th> Detaylar</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <img src="@item.ImageUrl" alt="image" />
                                    <span class="pl-2">@item.ClientName</span>
                                </td>
                                <td> @item.Company </td>
                                <td> @item.Comment </td> 
                                <td><a href="/Testimonial/DeleteTestimonial/@item.TestimonialId" class="btn btn-outline-danger">Sil</a></td>  
                                <td><a href="/Testimonial/EditTestimonial/@item.TestimonialId" class="btn btn-outline-success"> Detayları Gör</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


