@model EntityLayer.Concrete.Contact
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<!-- SubContact Index-->

@using (Html.BeginForm("Index", "SubContact", FormMethod.Post, new { @class = "col-12" }))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title"> Hakkımda</h4>

                <form class="forms-sample">
                    <div class="form-group">
                        @Html.HiddenFor(x=>x.ContactId)
                    </div>
                    <div class="form-group">
                        <label>Başlık</label>
                        @Html.TextBoxFor(x=>x.Title, new {@class="form-control"})
                    </div>
                     
                    <div class="form-group">
                        <label>Mail</label>
                        @Html.TextBoxFor(x=>x.Mail, new {@class="form-control"})
                    </div>
                    <div class="form-group">
                        <label>Telefon</label>
                        @Html.TextBoxFor(x=>x.Phone, new {@class="form-control"})
                    </div>
                    <div class="form-group">
                        <label>Açıklama</label>
                        @Html.TextAreaFor(x=>x.Description,10,3, new {@class="form-control"})
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                    <button class="btn btn-dark">İptal</button>
                </form>
            </div>
        </div>
    </div>
}

