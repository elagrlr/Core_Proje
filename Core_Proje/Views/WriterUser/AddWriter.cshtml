@model Core_Proje.Areas.Writer.Models.UserRegisterViewModel
@{
    ViewData["Title"] = "AddWriter";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yeni Sosyal Medya Hesabı Ekle</h4>

            <form class="pt-3" method="post">

                <div class="form-group">
                    <label>Adınız</label>
                    @*<span asp-validation-for="Name" class="text-danger"></span> Kullanıcı ad bölümünü boş geçerse açılacak ve hata mesajını gösterecek*@
                    <input type="text" asp-for="Name" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Soyadınız</label>
                    @*<span asp-validation-for="Surname" class="text-danger"></span> Kullanıcı ad bölümünü boş geçerse açılacak ve hata mesajını gösterecek*@
                    <input type="text" asp-for="Surname" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Kullanıcı Adınız</label>
                    @*<span asp-validation-for="UserName" class="text-danger"></span> Kullanıcı ad bölümünü boş geçerse açılacak ve hata mesajını gösterecek*@
                    <input type="text" asp-for="UserName" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Şifre</label>
                    @* <span asp-validation-for="Password" class="text-danger"></span> Kullanıcı ad bölümünü boş geçerse açılacak ve hata mesajını gösterecek*@
                    <input type="text" asp-for="Password" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Şifre Tekrar</label>
                    @* <span asp-validation-for="ConfirmPassword" class="text-danger"></span>*@
                    <input type="text" asp-for="ConfirmPassword" class="form-control" />
                </div>
                <div class="form-group">
                    <label>E-posta</label>
                    @* <span asp-validation-for="Mail" class="text-danger"></span>*@
                    <input type="text" asp-for="Mail" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Resim Yolu</label>
                    @*  <span asp-validation-for="ImageUrl" class="text-danger"></span>*@
                    <input type="text" asp-for="ImageUrl" class="form-control" />
                </div>
                <div class="mt-3">
                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                    <button class="btn btn-primary">Kaydol</button>

                </div>

            </form>
        </div>
    </div>
</div>