@model EntityLayer.Concrete.Portfolio
@{
    ViewData["Title"] = "AddPortfolio";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

@using (Html.BeginForm("AddPortfolio", "Portfolio", FormMethod.Post, new { @class = "col-12" }))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Yeni Proje Ekle</h4>

                <form class="forms-sample">
                    <div class="form-group">
                        <label>Proje Başlığı</label>
                        <input type="text" class="form-control" name="Name">
                    </div>
                    <div class="form-group">
                        <label>Proje Url</label>
                        <input type="text" class="form-control" name="ProjectUrl">
                    </div>
                    <div class="form-group">
                        <label> Görsel-1</label>
                        <input type="text" class="form-control" name="ImageUrl">
                    </div>
                    <div class="form-group">
                        <label>Görsel-2</label>
                        <input type="text" class="form-control" name="ImageUrl2">
                    </div>
                    <div class="form-group">
                        <label> Platform</label>
                        <input type="text" class="form-control" name="Platform">
                    </div>
                    <div class="form-group">
                        <label> Tamamlanma Oranı</label>
                        <input type="text" class="form-control" name="Value">
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                    <button class="btn btn-dark">İptal</button>
                </form>
            </div>
        </div>
    </div>

}


