@model EntityLayer.Concrete.Service
@{
    ViewData["Title"] = "EditService";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

@using (Html.BeginForm("EditService", "Service", FormMethod.Post, new { @class = "col-12" }))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Hizmet Güncelle</h4>
                @Html.HiddenFor(x=>x.ServiceId)
                <form class="forms-sample">
                    <div class="form-group">
                        <label>Hizmet Başlığı</label>
                        <input type="text" class="form-control" asp-for="@Model.Title">
                    </div>

                    <div class="form-group">
                        <label>Hizmet Görseli</label>
                        <input type="text" class="form-control" asp-for="@Model.ImageUrl">
                    </div>

                    <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                    <button class="btn btn-dark">İptal</button>
                </form>
            </div>
        </div>
    </div>
}

 