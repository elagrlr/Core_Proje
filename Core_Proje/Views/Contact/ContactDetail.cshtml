@model EntityLayer.Concrete.Message

@{
    ViewData["Title"] = "ContactDetail";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}
 
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title"> Mesaj Detayları</h4>

            <form class="forms-sample">
                <div class="form-group">
                    @Html.HiddenFor(x=>x.MessageId)
                </div>
                <div class="form-group">
                    <label>Gönderen Adı</label>
                    @Html.TextBoxFor(x=>x.Name, new {@class="form-control"})
                </div>
                <div class="form-group">
                    <label>Gönderen Mail</label>
                    @Html.TextBoxFor(x=>x.Mail, new {@class="form-control"})
                </div>
                <div class="form-group">
                    <label>Tarih  </label>
                    @Html.TextBoxFor(x=>x.Date.ToShortDateString(), new {@class="form-control"})
                </div>
                <div class="form-group">
                    <label>Mesaj</label>
                    @Html.TextAreaFor(x=>x.Content,10,3, new {@class="form-control"})
                </div>
               <a asp-action="Index" class="btn btn-outline-primary mr-2">İletişim Sayfasına Geri Dön</a>
            </form>
        </div>
    </div>
</div>


 