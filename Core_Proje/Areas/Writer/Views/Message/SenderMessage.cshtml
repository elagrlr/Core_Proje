@using EntityLayer.Concrete
@model List<WriterMessage>

@{
    ViewData["Title"] = "SenderMessage";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}
 
<!-- Message index (Gönderilen kutusu)-->

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Gönderilen Kutusu</h4>

            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Konu</th>
                            <th>Alıcı</th>
                            <th>Tarih</th>
                            <th>Detaylar</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th>@item.WriterId</th>
                                <td>@item.Subject</td>
                                <td>@item.ReceiverName</td>
                                <td>@(((DateTime)item.Date).ToShortDateString())</td>
                                <td><a href="/Writer/Message/ReceiverMessageDetails/@item.WriterId" class="btn btn-outline-primary">Mesajı Gör</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
