@using EntityLayer.Concrete
@model List<Announcement>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}
@{
    string color = "";
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Duyurular</h4>

            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Başlık</th>
                            <th>Tarih</th>
                            <th>Tür</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {

                            if (item.Status == "Yeni yazı")
                            {
                                color = "badge badge-danger";
                            }
                            else if (item.Status == "deneme")
                            {
                                color = "badge badge-warning";
                            }
                            else if (item.Status == "test status")
                            {
                                color = "badge badge-info";
                            }
                            else if (item.Status == "workshop")
                            {
                                color = "badge badge-success";
                            }
                            <tr>
                                <th>@item.Id</th>
                                <td>@item.Title</td>
                                <td>@(((DateTime)item.Date).ToShortDateString())</td>
                                <td><label class="@color">@item.Status</label></td>
                                <td>
                                    <a href="/Writer/Default/AnnouncementDetails/@item.Id" class="btn btn-outline-primary">Detaylar</a>
                                </td>
                                @*asp-action="AnnouncementDetails" asp-controller="Default" asp-route-id="@item.Id"*@
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
